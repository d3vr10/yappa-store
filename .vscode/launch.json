{
  "configurations": [
    {
      "name": "Debug Nest App",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "console": "integratedTerminal",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Seed XNTHA",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "db:xntha:seed"],
      "console": "integratedTerminal",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Any File",
      "type": "node",
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["${file}"],
      "console": "integratedTerminal",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    }
  ]
}
